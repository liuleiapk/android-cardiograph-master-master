<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/btn_white_selete_bg" />
            <stroke android:width="1dp" android:color="@color/btn_gray_border"/>
            <corners android:radius="5dp" />
            <padding
                android:left="15dp"
                android:right="15dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/btn_white_selete_bg" />
            <stroke android:width="1dp" android:color="@color/btn_gray_border"/>
            <corners android:radius="5dp" />
            <padding
                android:left="15dp"
                android:right="15dp" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/btn_gray_border"/>
            <corners android:radius="5dp" />
            <padding
                android:left="15dp"
                android:right="15dp" />
        </shape>
    </item>
</selector>