<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/btn_blue_selete_bg" />
            <corners android:radius="5dp" />
            <padding
                android:left="23dp"
                android:right="23dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_blue_selete_bg" />
            <corners android:radius="5dp" />
            <padding
                android:left="23dp"
                android:right="23dp" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_blue_text" />
            <corners android:radius="5dp" />
            <padding
                android:left="23dp"
                android:right="23dp" />
        </shape>
    </item>
</selector>
